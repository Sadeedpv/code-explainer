{
  "name": "code-explainer",
  "displayName": "Code Explainer",
  "description": "Explains every bit of code inside your editor",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sadeedpv/codeExplainer"
  },
  "license": "MIT",
  "publisher": "Sadeedpv",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "icon": "assets/code-explainer-logo-ext.png",
  "activationEvents": [
    "onCommand:code-explainer.hello-world",
    "onCommand:code-explainer.explain"
  ],
  "contributes": {
    "commands": [
      {
        "command": "code-explainer.hello-world",
        "title": "Hello World!"
      },
      {
        "command": "code-explainer.explain",
        "title": "Explain"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "code-explainer",
        "properties": {
          "code-explainer.apiKey": {
            "type": "string",
            "default": "",
            "description": "OPENAI API Key"
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "markdown-it": "^13.0.1",
    "openai": "^3.3.0"
  }
}
